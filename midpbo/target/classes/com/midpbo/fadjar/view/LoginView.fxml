<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.midpbo.fadjar.controller.AuthController"
      style="-fx-background-color: #f5f5f5;">
    
    <Label text="POS System Login" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font size="24.0" />
        </font>
        <padding>
            <Insets top="20" />
        </padding>
    </Label>
    
    <GridPane hgap="10.0" vgap="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        
        <children>
            <Label text="Username:" style="-fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="loginUsername" style="-fx-pref-width: 200;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Password:" style="-fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="loginPassword" style="-fx-pref-width: 200;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </children>
    </GridPane>
    
    <Label fx:id="messageLabel" />
    <Hyperlink fx:id="gotoSignup" text="Don't have an account? Sign up" />
</VBox>